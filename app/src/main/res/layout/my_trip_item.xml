<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/flight1"
        android:layout_width="331dp"
        android:layout_height="165dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/flight_item">

        <TextView
            android:id="@+id/fromText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flightNameText1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="4dp"
            android:text="From"
            android:textColor="@color/blueText"
            android:textSize="30dp"
            app:fontFamily="@font/open_sans_semibold" />

        <TextView
            android:id="@+id/toText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flightNameText1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:text="To"
            android:textColor="@color/redText"
            android:textSize="30dp"
            app:fontFamily="@font/open_sans_semibold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_below="@+id/flightNameText1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/plane_alone" />

        <TextView
            android:id="@+id/flightNameText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:text="INDIGO AIR"
            android:textColor="#4B4B4B"
            android:textSize="18dp"
            app:fontFamily="@font/open_sans_semibold" />

        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fromText"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="3dp"
            android:text="1 : 00 am"
            android:textColor="@color/greyText"
            android:textSize="18dp"
            app:fontFamily="@font/open_sans_semibold" />

        <TextView
            android:id="@+id/cclassText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toText"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:text="Economy"
            android:textColor="#4b4b4b"
            android:textSize="18dp"
            app:fontFamily="@font/open_sans_semibold" />

        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:text="04/02/2019"
            android:textColor="@color/greyText"
            android:textSize="18dp"
            app:fontFamily="@font/open_sans_semibold" />

    </RelativeLayout>

</RelativeLayout>