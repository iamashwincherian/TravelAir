<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appTheme"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/bubbles_top"
        android:layout_width="237dp"
        android:layout_height="277dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/bubble_gb" />

    <RelativeLayout
        android:id="@+id/bubbles_bottom"
        android:layout_width="225dp"
        android:layout_height="226dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bubble_bottom" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="43dp"
        android:text="Get Started"
        android:textColor="#4B4B4B"
        android:textSize="32sp"
        app:fontFamily="@font/open_sans_semibold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="Welcome to the No 1 flight"
        android:textColor="#4b4b4b"
        android:textSize="17sp"
        app:fontFamily="@font/open_sans_semibold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="50dp"
        android:text="Booking App"
        android:textColor="#4b4b4b"
        android:textSize="17sp"
        app:fontFamily="@font/open_sans_semibold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginBtn"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="Copyright Â© 2019 "
        android:textColor="#4b4b4b"
        android:textSize="16dp"
        app:fontFamily="@font/open_sans_semibold" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="278dp"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/start_button_new" />


</RelativeLayout>