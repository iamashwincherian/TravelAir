<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".register">

    <RelativeLayout
        android:layout_width="237dp"
        android:layout_height="277dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/bubble_gb"></RelativeLayout>

    <RelativeLayout
        android:layout_width="225dp"
        android:layout_height="226dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bubble_bottom">

    </RelativeLayout>


    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:text="MY TRIPS"
        android:textColor="#4b4b4b"
        android:textSize="35sp"
        app:fontFamily="@font/open_sans_semibold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView17"
        android:layout_marginTop="20dp"
        android:paddingBottom="60dp">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:background="@drawable/nav_bg"
        android:gravity="center"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"></RelativeLayout>

        <RelativeLayout
            android:id="@+id/relTrips"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="60dp"
                android:layout_height="46dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="6dp"
                android:background="@drawable/nav_trips_filled" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/homeBtn"
                android:layout_width="42dp"
                android:layout_height="47dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="6dp"
                android:background="@drawable/nav_home_unfilled" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relAcc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/myAccBtn"
                android:layout_width="83dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="6dp"
                android:background="@drawable/nav_acc_unfilled" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"></RelativeLayout>

    </LinearLayout>

</RelativeLayout>