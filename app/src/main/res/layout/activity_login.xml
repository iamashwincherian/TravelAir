<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appTheme"
    tools:context=".MainActivity"
    android:focusable="true" android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@drawable/login_whie_bg">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="241dp"
            android:layout_height="191dp"
            android:layout_alignParentTop="false"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/testBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/appTheme"
            android:text="Users"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="278dp"
        android:layout_height="68dp"
        android:layout_above="@+id/regBtn"
        android:layout_centerInParent="true"
        android:background="@drawable/login_button_dark" />

    <Button
        android:id="@+id/googleLoginBtn"
        android:layout_width="278dp"
        android:layout_height="68dp"
        android:layout_above="@+id/regBtn"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginBottom="63dp"
        android:background="@drawable/google_btn" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="278dp"
        android:layout_height="68dp"
        android:layout_below="@+id/editUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/password_textfield"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingTop="12dp"
        android:paddingRight="20dp"
        android:textColor="@color/colorAccent"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editUsername"
        android:layout_width="278dp"
        android:layout_height="68dp"
        android:layout_below="@+id/rel1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/email_textfield"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:paddingTop="12dp"
        android:paddingRight="20dp"
        android:textColor="@color/colorAccent"
        android:textSize="20dp" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <TextView
        android:id="@+id/regBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="New user? Register"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        app:fontFamily="@font/open_sans_semibold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/googleLoginBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="Sign in with"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        app:fontFamily="@font/open_sans_semibold" />

</RelativeLayout>